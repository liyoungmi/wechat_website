/* pages/brandManagement/brandManagement.wxss */
page{
  background-color: #f5f5f5; 
}
.scroll_box{
width: 100%;
height: 100rpx;
overflow: hidden;
background: #1d2087;
white-space: nowrap;
position: fixed;
top: 0;
z-index: 1;
}
.item_list{
width: 160rpx;
height: 100rpx;
text-align: center;
line-height: 100rpx;
margin-right: 23rpx;
color: #fff;
display: inline-block;
}
.item_listactive{
  width: 160rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-right: 23rpx;
  color: #ffff00;
  display: inline-block;
}
.aboutKZ-img{
  width: 100%;
  height: 400rpx;
}
.menu-container{
  width: 100%;
  white-space: nowrap;
  height: 100rpx;
  overflow: hidden;
  background-color: #fff;
  margin: 5rpx auto 20rpx auto;
}
.scroll-view image{
  width: 60rpx;
  height: 60rpx;
}
.scroll-view{
  white-space: nowrap;
}
.scroll-view-item{
  font-size: 38rpx;
  width: 250rpx;
  margin: 0 auto;
  display:inline-block;
  line-height: 100rpx; 
  position: relative;
  border-left: 1rpx solid #e5e5e5;
}
.scroll-view .active{
  color: #212489;
}
.scroll-view-item>image{
  position: absolute;
  top: 20%;
  left: 5%;
}
.scroll-view-item>text{
  margin-left: 70rpx;
}
.brandManagement{
  float:left;
  width: 500rpx;
  height: 340rpx;
}
.market-scroll-list text{
  font-size: 24rpx;
  margin-left: 60rpx;
}
.liangjitang{
  border-bottom: 2rpx dashed;
  text-align: center;
}