page{
  background-color: #f5f5f5; 
}
.scroll_box{
width: 100%;
height: 100rpx;
overflow: hidden;
background: #1d2087;
white-space: nowrap;
position: fixed;
top: 0;
z-index: 1;
}
.item_list{
width: 160rpx;
height: 100rpx;
text-align: center;
line-height: 100rpx;
margin-right: 23rpx;
color: #fff;
display: inline-block;
}
.item_listactive{
  width: 160rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-right: 23rpx;
  color: #ffff00;
  display: inline-block;
}
.aboutKZ-img{
  width: 100%;
  height: 400rpx;
}
.menu-container{
  width: 100%;
  white-space: nowrap;
  height: 100rpx;
  overflow: hidden;
  background-color: #fff;
  margin: 5rpx auto 20rpx auto;
}
.scroll-view image{
  width: 60rpx;
  height: 60rpx;
}
.scroll-view{
  white-space: nowrap;
}
.scroll-view-item{
  font-size: 38rpx;
  width: 250rpx;
  margin: 0 auto;
  display:inline-block;
  line-height: 100rpx; 
  position: relative;
  border-left: 1rpx solid #e5e5e5;
}
.scroll-view .active{
  color: #212489;
}
.scroll-view-item>image{
  position: absolute;
  top: 20%;
  left: 5%;
}
.scroll-view-item>text{
  margin-left: 70rpx;
}
.talentdevelopment-bg{
  background-color: #fff;
  height: 100%;
}
.brandManagement{
  float:left;
  width: 500rpx;
  height: 340rpx;
}
.market-scroll-list text{
  font-size: 24rpx;
  margin-left: 60rpx;
}
.process{
  height: 1200rpx;
  width: 900rpx;
  background-color: #fff;
}
.process>image{
  height: 1100rpx;
  width: 700rpx;
  margin: 30rpx 20rpx;
}
.detail_img{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: center;
  background-color: #fff;
}
.view_img{
  height: 300rpx;
  width: 350rpx;
  border: 1rpx solid #eeeeee;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  position: relative;
}
.view_img>image{
  height: 300rpx;
  width: 350rpx;
}
.view_bottom{
  width: 350rpx;
  height: 50rpx;
  background-color: #89c8ec;
  opacity:0.6; 
  position: absolute;
  bottom: 0rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.customerService{
  border-bottom: 2rpx solid #cfd9e4;
  background-color: #fff;
  padding: 50rpx 0;
}
.customerService-icons{
  width: 60rpx;
  height: 55rpx;
  margin-left: 40rpx;
}
.market-scroll-list .customerService-title{
  font-size: 36rpx;
  font-weight: 900;
  color: #1d2087;
  margin-left: 0rpx;
}
.customerService view{
  margin-left: 90rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}
.content{
  height: 1800rpx;
}
.detail-container{
  height: 100%;
}
