/* pages/mainBusiness/mainBusiness.wxss */
page{
  background-color: #f5f5f5; 
}
.scroll_box{
width: 100%;
height: 100rpx;
overflow: hidden;
background: #1d2087;
white-space: nowrap;
position: fixed;
top: 0;
z-index: 1;
}
.item_list{
width: 160rpx;
height: 100rpx;
text-align: center;
line-height: 100rpx;
margin-right: 23rpx;
color: #fff;
display: inline-block;
}
.item_listactive{
  width: 160rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-right: 23rpx;
  color: #ffff00;
  display: inline-block;
}
.aboutKZ-img{
  width: 100%;
  height: 300rpx;
  margin-top: 100rpx;
}
.menu-container{
  width: 100%;
  white-space: nowrap;
  height: 100rpx;
  overflow: hidden;
  background-color: #fff;
  margin: 5rpx auto 20rpx auto;
}
.scroll-view image{
  width: 60rpx;
  height: 60rpx;
}
.scroll-view{
  white-space: nowrap;
}
.scroll-view-item{
  font-size: 38rpx;
  width: 250rpx;
  margin: 0 auto;
  display:inline-block;
  line-height: 100rpx; 
  position: relative;
  border-left: 1rpx solid #e5e5e5;
}
.scroll-view .active{
  color: #212489;
}
.scroll-view-item>image{
  position: absolute;
  top: 20%;
  left: 5%;
}
.scroll-view-item>text{
  margin-left: 70rpx;
}

.KZ-company{
  background-color: #fff;
  width: 100%;
  height: 500rpx;
}
.mainBusinessclassify>view{
  width: 350rpx;
  margin-left: 10px;
  background-color: #fff;
}
.mainBusinessclassify image{
  width: 350rpx;
  height: 200rpx;
}
.mainBusinessclassify{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.mainBusinesstitle{
  color: #fff;
  text-align: center;
  background-color: #036ccb;
  font-size: 24rpx;
}
.mainBusinesscompany{
  color: #1d2087;
  font-size: 24rpx;
}
.mainBusinessaddress{
  color: #ababab;
  font-size: 24rpx;
}
.process{
  background-color: #fff;
  width: 100%;
  height: 1000rpx;
}
.topbar{
  width: 100%;
  height: 1000rpx;
}
.wholesale{
  width: 100%;
  position: relative;
  font-size: 26rpx;
}
.wholesale>image{
  width: 100%;
  height: 420rpx;
}
.blackSpot{
  width: 8rpx;
  height: 8rpx;
  background-color: #000;
  border-radius: 4rpx;
}
.mainBannertext{
  display: flex;
  flex-direction: column;
  justify-content: center;  
  width: 100%;
  position: absolute;
  top: 20rpx;
}
.mainBannertext>view{
  text-align: center;
}
.mainBannertext>view:nth-of-type(1){
  font-size: 34rpx;
}
.E-commerce{
  width: 100%;
  position: relative;
  font-size: 26rpx; 
}
.E-commerce>image{
  width: 100%;
  height: 420rpx;
}
.chain{
  width: 100%;
  position: relative;
  font-size: 26rpx; 
}
.chain>image{
  width: 100%;
  height: 520rpx;
}
.Storefront{
  position: absolute;
  font-size: 24rpx;
  bottom: 40rpx;
  right: 30rpx;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1rem;
  align-items: center;
  font-size: 24rpx;
}
.cd{
    width:10%;
    justify-content: center;
    text-align: center;
}
.td {
    width:30%;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    border-left: 2rpx solid #fff;
    border-right: 2rpx solid #fff;
}
.yd{
    width:60%;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #bee9ff;
}
.th {
  width: 0%;
  justify-content: center;
  background: #7ecdf4;
  color: #fff;
  display: flex;
  height: 1rem;
  align-items: center;
}
.blank{
  width: 10%;
}
.store{
  width: 30%;
  border-left: 2rpx solid #fff;
  border-right: 2rpx solid #fff;
}
.address{
  width: 60%;
}
.button>button{
  width: 100rpx;
  height: 65rpx;
  margin: 20rpx 30rpx;
  font-size: 28rpx;
  background-color: #eee;
}
.button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  background-color: #fff;
}
