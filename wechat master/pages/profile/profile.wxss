/* pages/profile/profile.wxss */
page{
  background-color: #f1f2f6;
}
.header{
  height: 90rpx;
  width: 100%;
  font-size: 38rpx;
  position: relative;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
}
.header-back{
  display: flex;
  align-items: center;
  font-size: 32rpx;  
}
.header image{
  width: 50rpx;
  height: 50rpx;
}
.header .toindex{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.information{
  margin-top: 20rpx;
  background-color: #fff;
}
.information .input{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 90rpx;
  width: 100%;
  border: 1rpx solid #e0e0e0;
  font-size: 28rpx;
}
.information input{
  margin-left: 20rpx;
}
.information image{
  width: 100rpx;
  height: 100rpx;
}
.log{
  height: 240rpx;
  width: 100%;
  border: 1rpx solid #e0e0e0;
  background-color: #fff;
}
.log-button{
  width: 94%;
  background-color: #f03030;
  border-radius: 10rpx;
  color: #fff;
  margin: 40rpx auto;
}
.registered{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  font-size: 28rpx;
  color: #1b7ce3;
  width: 94%;
  margin: 0 auto;
}
.other{
  height: 500rpx;
  margin-top: 20rpx;
  padding-top: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}
.cell-phone{
  width: 80%;
  height: 70rpx;
  background-color: #97cc74;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff;
  position: relative;
  padding-top: 20rpx;
  font-size: 32rpx;
}
.cell-phone>image{
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
  top: 25rpx;
}
.text-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 24rpx;
  margin-top: 50rpx;
  color: #808080;
}
.text-list text{
  border: 1rpx solid #1b7ce3;
  background-color: #1b7ce3;
  border-radius: 50%;
  color: #fff;
}
.copyright{
  font-size: 24rpx;
  color: #808080;
  text-align: center;
  margin-top: 30rpx;
}
