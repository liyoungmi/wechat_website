.search-text{
  height: 100rpx;
  width: 100%;
  background-color: #3086b7;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}
.search-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  height: 70rpx;
  width: 80%;
  border-radius: 20rpx;
  margin-left: 10rpx;
}
.search-ss{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 150rpx;
  height: 100%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: #55d4f4;
}
.search-input{
  font-size: 26rpx;
  padding-left: 20rpx;
}
.search-button{
  font-size: 30rpx;
  color: #fff;
}
.classify-text{
  color: #fff;
  font-size: 26rpx;
}
.oicon_classify{
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
}
.oicon_class{
  margin-top: -10rpx;
}
.search-grass{
  width: 160rpx;
  height: 38rpx;
  margin: auto 10rpx;
}